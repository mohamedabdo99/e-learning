<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DoctorActivity.AddLectureForSubjectDoctorDetails">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycle_showLectureAndAdd"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp"
    android:layout_marginTop="@dimen/_30sdp"/>

<Button
    android:id="@+id/btn_addLectue"
    android:layout_below="@+id/recycle_showLectureAndAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Lecture"
    android:layout_margin="@dimen/_20sdp"/>
</RelativeLayout>